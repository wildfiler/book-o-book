.authors
  - @authors.each do |author|
    .author
      .name
        = link_to author.full_name,  author_path(author)
      .biography= author.biography
      %ul.author-books
        - author.last_5_books.each do |book|
          %li.book
            = link_to book_path(book) do
              = image_tag book.cover_url
      .clearfix
